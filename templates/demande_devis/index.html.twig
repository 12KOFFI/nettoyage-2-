{% extends 'base.html.twig' %}

{% block title %}Contact - Multi-Nettoyage Propreté{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/demande-devis-form.css') }}">
{% endblock %}

{% block body %}
<!-- Banner Header -->
    <section class="banner-header valign bg-img bg-imgfixed" data-overlay-dark="4" data-background="{{ asset('img/slider/10.jpg') }}" style="min-height: 60vh; display: flex; align-items: center;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-10 text-center">
                    <h5 class="wow fadeInUp" data-wow-delay=".1s" style="background: rgba(0, 51, 102, 0.8); padding: 8px 20px; border-radius: 30px; display: inline-block; font-size: 14px; letter-spacing: 2px; margin-bottom: 20px;">Contactez-nous</h5>
                    <h3 class="wow fadeInUp" data-wow-delay=".3s" style="font-size: clamp(32px, 5vw, 55px); font-weight: 800; text-shadow: 2px 2px 4px rgba(0,0,0,0.5);">Demandez votre devis gratuit</h3>
                   
                </div>
            </div>
        </div>
        <div style="position:absolute;bottom:0;left:0;right:0;height:4px;background:linear-gradient(90deg,#003366,#33cc66,#003366);"></div>
    </section>
    <!-- Contact Section with Background -->
    <section class="info-box section-padding contact-section-bg">
        <div class="container">
            <div class="row align-items-start">
                <div class="col-lg-5 col-md-12 mb-4 mb-lg-0">
                    <div class="contact-info-card">
                        <h3>Coordonnées</h3>
                        <div class="item"> <i class="icon fa-regular fa-location-dot"></i>
                            <div class="cont">
                                <h5>Zone d'intervention</h5>
                                <p><strong>Paris</strong> et <strong>Île-de-France</strong></p>
                            </div>
                        </div>
                        <div class="item"> <i class="icon fa-solid fa-phone"></i>
                            <div class="cont">
                                <h5>Téléphone</h5>
                                <p><a href="tel:+33123456789">+33 0669537573</a></p>
                            </div>
                        </div>
                        <div class="item"> <i class="icon fa-regular fa-envelope"></i>
                            <div class="cont">
                                <h5>Email</h5>
                                <p><a href="mailto:Contact@multi-nettoyage94.fr">Contact@multi-nettoyage94.fr</a></p>
                            </div>
                        </div>
                        <div class="worktime mb-30 mt-40">
                            <h5 class="mb-20">Horaires</h5>
                            <ul>
                                <li>
                                    <div class="tit">Accueil téléphonique</div>
                                    
                                    <div class="dots"></div> <span>Lun - Ven : 9h00 - 18h30</span>
                                </li>
                                <li>
                                    <div class="tit">Urgences</div>
                                    <div class="dots"></div> <span>7h00 - 22h00</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 offset-lg-1 col-md-12">
                    <div class="contact-form devis-form-card">
                        <h3><i class="fa-light fa-file-invoice"></i> Demande de devis gratuit</h3>
                        <p class="form-subtitle">Remplissez le formulaire ci-dessous et recevez votre devis personnalisé sous 24h.</p>
                        
                        {% include 'demande_devis/_form.html.twig' with {'form': form, 'button_label': 'Envoyer ma demande de devis'} %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
